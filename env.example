# Jules Mac Runner Environment Configuration
# Copy this to .env and fill in your values

# ============================================
# DATABASE (choose one mode)
# ============================================

# Option 1: Supabase (cloud/managed)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-key

# Option 2: PostgreSQL (self-hosted production)
# DATABASE_URL=postgres://user:pass@localhost:5432/jules_mac_runner

# Option 3: SQLite (self-hosted simple - default if nothing set)
# SQLITE_PATH=data/jules-mac-runner.db

# Stripe Configuration (optional, for billing)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PUBLISHABLE_KEY=pk_test_...

# Orchestrator Settings
PORT=3000
BASE_URL=http://localhost:3000

# CORS Configuration (comma-separated origins for production)
# Leave unset for permissive mode (local development)
# CORS_ORIGINS=https://alloy-ci.dev,https://app.alloy-ci.dev

# Worker Authentication (optional, but recommended for production)
# Set the same secret key on both orchestrator and workers
WORKER_SECRET_KEY=your-secure-secret-key-here

# Worker Settings (for Mac Mini agents)
ORCHESTRATOR_URL=http://localhost:3000
WORKER_HOSTNAME=mac-mini-1
WORKER_CAPACITY=2
TART_BASE_IMAGE=ghcr.io/cirruslabs/macos-sonoma-xcode:latest

# CLI Settings
ALLOY_API_URL=http://localhost:3000
ALLOY_API_KEY=your-api-key
